{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Latest - Build & Test",
            "type": "shell",
            "command": "docker run -it --rm lacledeslan/gamesvr-tf2 ./ll-tests/gamesvr-tf2.sh;",
            "dependsOn": "Latest - Build Docker Image",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Latest - Build Docker Image",
            "type": "docker-build",
            "dockerBuild": {
                "context": "${workspaceFolder}",
                "dockerfile": "${workspaceFolder}/linux.Dockerfile",
                "tag": "lacledeslan/gamesvr-tf2:latest",
                "labels": {
                    "com.lacledeslan.build-node": "${env:computername}",
                }
            }
        },
        {
            "label": "Build local SteamCMD cache",
            "type": "shell",
            "command": "docker run --rm -v ${cwd}./.steamcmd/linux/cache/:/output lacledeslan/steamcmd:linux ./steamcmd.sh +force_install_dir /output +login anonymous +app_update 232250 validate +quit",
            "problemMatcher": []
        }
    ]
}
